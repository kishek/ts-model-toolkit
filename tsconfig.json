{
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist", "**/__tests__/**", "./src/**/*test.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src/",
    "baseUrl": "./",
    "paths": {},
    "incremental": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2020", "DOM"],
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true
  },
  "references": []
}
