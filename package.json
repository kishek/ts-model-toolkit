{
  "name": "@kishek/ts-model-toolkit",
  "version": "1.1.5",
  "description": "A modelling companion for TypeScript, with transforms between TS -> various formats.",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "ts-model-toolkit": "./dist/cli/cli.js",
    "ts-model-toolkit:dev": "./src/cli/cli.js"
  },
  "files": [
    "dist/**/*",
    "!src/parser/__mocks__/",
    "!src/parser/__snapshots__/",
    "!src/parser/__test_utils__/",
    "!src/transformer/__mocks__/",
    "!src/**/*.test.ts",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:ts-model-toolkit/ts-model-toolkit.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf -rf ./dist && rm -f ./*tsbuildinfo",
    "test": "jest --rootDir ./src",
    "publish:remote": "yarn compile && npm version patch && npm publish"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/lodash.flattendeep": "^4.4.9",
    "@types/node": "ts5.7",
    "@types/yargs": "^17.0.33",
    "jest": "^29.7.0"
  },
  "license": "MIT",
  "packageManager": "yarn@4.5.3",
  "dependencies": {
    "@graphql-tools/merge": "^9.0.12",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.9.3",
    "fast-glob": "^3.3.2",
    "graphql": "^16.9.0",
    "lodash.flattendeep": "^4.4.0",
    "prettier": "^3.4.1",
    "ts-morph": "^24.0.0",
    "typescript": "^5.7.2",
    "yargs": "^17.7.2"
  }
}
